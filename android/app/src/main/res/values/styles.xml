<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!--&lt;!&ndash; For the resting Spinner style &ndash;&gt;-->
        <!--<item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>-->

        <!--&lt;!&ndash; For each individual Spinner list item once clicked on &ndash;&gt;-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>-->

    </style>

    <style name="spinnerItemStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/background_secondary</item>
        <item name="android:padding">40dp</item>

    </style>

    <style name="spinnerDropDownItemStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/background_secondary</item>
        <item name="android:padding">60dp</item>

    </style>

    <style name="MySpinner">
        <item name="android:background">@color/background_secondary</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="android:divider">#aaa</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>