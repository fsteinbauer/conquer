<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/frag_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/profilepic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iv_picture"
            android:background="@drawable/image_scrim"
            android:gravity="bottom"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Johannes der LÃ¤ufer"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp" />

            <EditText
                android:id="@id/et_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone"/>


            <ImageButton
                android:id="@id/ib_name_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@id/iv_picture"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/tv_profile_name"
                android:background="@drawable/ic_pencil"
                android:layout_marginBottom="8dp" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout android:id="@id/ll_trackinginfo_info_info"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="@color/background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        >


        <TextView android:id="@id/tv_trackinginfo_info_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.87km/h"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"
            />


        <TextView android:id="@id/tv_trackinginfo_info_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.85km"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"

            />

        <TextView android:id="@id/tv_trackinginfo_info_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13:45"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"

            />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>