<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/rl_activity_maps"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>


    <android.support.design.widget.TabLayout android:id="@id/tl_tabs"
                                             android:layout_height="wrap_content"
                                             android:layout_width="match_parent"
                                             app:tabBackground="@color/background"
                                             app:tabIndicatorColor="@color/orange"
                                             app:tabIndicatorHeight="4dp"
                                             app:tabMaxWidth="0dp"
                                             app:tabGravity="fill"
                                             app:tabMode="fixed"
    >

        <android.support.design.widget.TabItem android:id="@id/ti_map"
                                               android:layout_height="wrap_content"
                                               android:layout_width="wrap_content"
                                               android:icon="@drawable/ic_google_maps"
        />


        <android.support.design.widget.TabItem android:id="@id/ti_highscores"
                                               android:layout_height="wrap_content"
                                               android:layout_width="wrap_content"
                                               android:icon="@drawable/ic_trophy"
        />

        <android.support.design.widget.TabItem android:id="@id/ti_account"
                                               android:layout_height="wrap_content"
                                               android:layout_width="wrap_content"
                                               android:icon="@drawable/ic_account"
        />


    </android.support.design.widget.TabLayout>


    <FrameLayout android:id="@id/fl_fragment_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_below="@id/tl_tabs"
    />

</RelativeLayout>